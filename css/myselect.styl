.myselect
  display block
  cursor default
  > p
    margin 0
    user-select none
    -webkit-user-select none
    -moz-user-select none
    -o-user-select none
    -ms-user-select none
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  > ul
    display none
    line-height 0
    margin 0
    padding 0
    > li
      display block
      list-style none
      line-height normal
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

.myselect-opened
  > ul
    display block
    position absolute